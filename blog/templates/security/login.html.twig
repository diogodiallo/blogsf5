{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center lead">Se connecter</h1>
    {# Affichage du message flash #}
    {# ========================== #}
    {{ include("_flash.html.twig") }}
    <div class="row justify-content-md-center">
        <div class="col-md-4 col-md-offset-4 p-3 rounded bg-dark text-white">
            <form action="{{ path('security.login') }}" method="POST" accept-charset="UTF-8">
                <div class="form-group">
                    <input type="email" name="_username" class="form-control" 
                    required placeholder="louise@gmail.com">
                </div>
                <div class="form-group">
                    <input type="password" name="_password" class="form-control" 
                    required placeholder="qwertydggsgs">
                </div>
                <div class="form-group">
                    <label for="remember_me" class="">
                    <input type="checkbox" name="_remember_me" id="remember_me" class="" 
                    checked> Se souvenir de moi ? </label>
                </div>
                <input type="submit" class="btn btn-success" value="Connexion">
            </form>                  
        </div>
    </div>
</div>
{% endblock %}