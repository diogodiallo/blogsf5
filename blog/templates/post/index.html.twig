{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <div class="row">
        {% for post in posts %}
            <article class="card col-md-3 col-12 my-3">
                <div class="card-header">
                    <h5 class="card-title">
                        <a href="{{ path( 'post.show', {'id': post.id} ) }}" class="text-decoration-none">
                            {{ post.title }}
                        </a>
                    </h5>
                    <p><em>Catégorie : {{ post.category.title }}</em></p>
                </div>
                <div class="card-body">
                    <img src="{{ post.image }}" class="card-img-top" alt="{{ post.title }}">
                    <p class="card-text">
                        {{ post.content|slice(0, 150)|raw }}
                    </p>
                    <a href="{{ path( 'post.show', {'id': post.id} ) }}" class="btn btn-primary">lire la suite</a>
                </div>
                <div class="card-footer">
                    <p>&Eacute;crit le : {{ post.createdAt|date('d-m-Y à H:i:s') }}</p>
                </div>
            </article>
        {% endfor %}  
    </div>
{% endblock %}
